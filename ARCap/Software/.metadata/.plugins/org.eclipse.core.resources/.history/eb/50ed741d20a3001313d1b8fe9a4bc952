#ifndef BRIDGE_H_
#define BRIDGE_H_

#define BRIDGE_RECEIVE_QUEUE_SIZE	4

class Bridge {
public:
	Bridge();
	virtual ~Bridge();

	/*
	 * Gets the queue used to accept infrared receive events.
	 * @return the infrared receive queue
	 */
	OS_EVENT *listener();
protected:
	/* The buffer and queue used to receive events. */
	int receiveBuffer[BRIDGE_RECEIVE_QUEUE_SIZE];
	OS_EVENT *receiveQueue;
};

#endif /* BRIDGE_H_ */
