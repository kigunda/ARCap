#ifndef NETWORKHANDLER_H_
#define NETWORKHANDLER_H_

using namespace std;
#include <string>

enum NetworkTarget {
	NETWORK_INFRARED,
	NETWORK_MOTOR,
};

class NetworkHandler {
public:
	NetworkHandler();
	virtual ~NetworkHandler();

	Status send(NetworkTarget target, string parameters);
};

#endif /* NETWORKHANDLER_H_ */
