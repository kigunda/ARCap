void helper_testStop(char *message, char *stop, int stopLength) {
	int messageLength = strnlen(message, WIFI_READ_MAX_SIZE);
	bool endsWith = stringEndsWith(message, messageLength, stop, stopLength);
	printf("stringEndsWith(%s, %d, %s, %d): %s\n", message, messageLength, stop, stopLength,
			endsWith? "true" : "false");
}

void helper_test_task(void *pdata) {
	while (true) {
		char *stop = "na";
		int stopLength = strnlen(stop, WIFI_READ_STOP_MARKER_MAX_SIZE);
		helper_testStop("", stop, stopLength);
		helper_testStop("banana", stop, stopLength);
		helper_testStop("rasberry", stop, stopLength);
		OSTimeDlyHMSM(0, 0, 3, 0);
	}
}


