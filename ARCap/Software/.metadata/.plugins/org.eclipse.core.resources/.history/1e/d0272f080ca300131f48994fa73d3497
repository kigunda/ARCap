#include "NetworkHandler.h"

// ALLOCATION
NetworkHandler::NetworkHandler() {}
NetworkHandler::~NetworkHandler() {}

// INITIALIZATION
/*
 * Initializes this handler.
 * @return OK if there are no initialization errors
 */
Status NetworkHandler::init() {
	// Open the ADC.
	adc_dev = alt_up_de0_nano_adc_open_dev(ADC_NAME);
	if (adc_dev == NULL) {
		return ERR_INFRARED;
	} else {
		return OK;
	}
}
