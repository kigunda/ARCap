#ifndef INFRAREDSENDER_H_
#define INFRAREDSENDER_H_

#include "Listener.h"

/**
 * Listens for send commands on a queue and applies them to the infrared emitters.
 */
class InfraredSender: Listener {
public:

	/*
	 * Checks the receive queue for infrared commands.
	 * @return OK when a new command is received and processed without error
	 */
	void update();
private:
	/**
	 * Sends a signal from the infrared emitters.
	 */
	void send();
};

#endif /* INFRAREDSENDER_H_ */
