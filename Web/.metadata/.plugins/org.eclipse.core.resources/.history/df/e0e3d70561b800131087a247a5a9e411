$(document).ready(function() {
	bindButtonToShoot(".shoot");
});

function bindButtonToShoot(buttons) {
	$(buttons).click(function(e) {
		console.log("is");
//		websocket.send("is");
	});
}

function bindSliderToMove(sliders) {
	var range = 125;
	var step = 5;
	$(sliders).attr('min', -range);
	$(sliders).attr('max', range);
	$(sliders).attr('step', step);
	$(sliders).change(function() {
		
	});
}

function bindSliderToMoveJQuery(sliders) {
	var range = 125;
	var step = 5;
	$(sliders).each(function() {
		var motor = $(this).attr('data-motor');
		$(this).slider({
			max: range,
			min: -range,
			step: step, 
			orientation: 'vertical',
			value: 0,
			slide: function(e, ui) {
				var direction, speed;
				if (ui.value > 0) {
					direction = 'f';
					speed = ui.value;
				} else {
					direction = 'b';
					speed = Math.abs(ui.value);
				}
				var command = "m" + motor + direction + speed;
				console.log(command);
//				websocket.send(command);
			},
		});
	});
}
