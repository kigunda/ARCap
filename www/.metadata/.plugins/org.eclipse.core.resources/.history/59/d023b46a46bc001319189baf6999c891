function Dpad(controller, placement, cssClass) {
	this.controller = controller;
	this.position = {
			x: placement.x - (DpadButton.width / 2),
			y: placement.y - (DpadButton.height / 2),
	};
	this.buttons = {};
	this.buttons.selected = null;
	this.createMoveButtons(-1, "f");
	this.createMoveButtons(1, "b");
	this.createStopButton();
}

Dpad.prototype.createMoveButton = function(offset, actions) {
	DpadButton.create(this, {
		origin: this.position,
		offset: offset,
	})
}

Dpad.prototype.createMoveButtons = function(sign, direction) {
	DpadButton.create(this, {
		origin: this.position,
		offset: {x: 0, y: sign * 1},
	}, this.cssClass, {
		motor: this.motor,
		direction: direction,
		speed: 70,
	});
	DpadButton.create(this, {
		origin: this.position,
		offset: {x: 0, y: sign * 2},
	}, this.cssClass, {
		motor: this.motor,
		direction: direction,
		speed: 85,
	});
	DpadButton.create(this, {
		origin: this.position,
		offset: {x: 0, y: sign * 3},
	}, this.cssClass, {
		motor: this.motor,
		direction: direction,
		speed: 100,
	});
};

Dpad.prototype.createStopButton = function() {
	var stop = DpadButton.create(this, {
		origin: this.position,
		offset: {x: 0, y: 0},
	}, this.cssClass, {
		motor: this.motor,
		direction: 'f',
		speed: 0,
	}, {
		attr: {
			deselected: {
				opacity: 0.8,
			},
		},
	});
	stop.select();
};

Dpad.create = function(controller, placement, cssClass, motor) {
	return new Dpad(controller, placement, cssClass, motor);
};