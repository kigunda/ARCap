$(document).ready(function() {
	bindButtonToShoot("#shoot");
	bindSliderToMotor("#move");
});

function bindButtonToShoot(buttons) {
	$(buttons).click(function(e) {
		console.log("is");
//		websocket.send("is");
	});
}

function bindSliderToMove(sliders) {
	sliders.each(function() {
		var motor = $(this).attr('data-motor');
		$(this).slider({
			max: 127,
			min: -127,
			orientation: 'vertical',
			value: 0,
			slide: function(e, ui) {
				var direction, speed;
				if (ui.value > 0) {
					direction = 'f';
					speed = ui.value;
				} else {
					direction = 'b';
					speed = Math.abs(ui.value);
				}
				websocket.send("m" + motor + direction + speed);
			},
		});
	});
}
